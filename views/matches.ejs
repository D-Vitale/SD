<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Soccer data - <%=competition%></title>
  </head>
  <body>
    <h1 class="text-center"><%=competition%></h1>
    <div class="container pagination justify-content-center" style="margin: auto;">
        <a class="btn btn-primary" href="/" role="button" style="margin: 5px 10px 10px 10px;">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house-door-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M6.5 10.995V14.5a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-7a.5.5 0 0 1 .146-.354l6-6a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 .146.354v7a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5V11c0-.25-.25-.5-.5-.5H7c-.25 0-.5.25-.5.495z"/>
            <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
        </svg>
        </a>
        <a class="btn btn-primary" href="/<%=code%>" role="button" style="margin: 5px 10px 10px 10px;">Classifica</a>
        <a class="btn btn-primary" href="/<%=code%>/stats" role="button" style="margin: 5px 10px 10px 10px;">Marcatori</a>
        <a class="btn btn-primary" href="/<%=code%>/matches" role="button" style="margin: 5px 10px 10px 10px;">Calendario</a>
    </div>
    <div id="selectmatchday" class="container justify-content-center" style="align-items: center;"></div>
    <!-- Optional JavaScript -->
    <script type="text/javaScript">
        const container = document.getElementById("selectmatchday")
        const teams = <%=teams%>
        const matchdays = 2*teams - 2
        for (let i = 0; i < matchdays; i++) {
            const button = document.createElement("a")
            button.setAttribute("role", "button")
            button.setAttribute("class", "btn btn-light")
            button.setAttribute("href", `/<%=code%>/matches/${i+1}`)
            button.setAttribute("style", "margin: 5px 10px 10px 10px; width: 200px; heigth: 125px;")
            button.innerHTML = `Giornata ${i+1}`
            container.appendChild(button)
        }
    </script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>